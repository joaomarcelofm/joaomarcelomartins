<div class="row">
  <% @projects.each do |project| %>
  <div class="col-md-4">
    <%= link_to project_path(project) do %>
    <div class="project-card">
      <%= image_tag project.thumbnail %>
      <h3><%= project.name %></h3>
      <p>
        <%= project.description %>
      </p>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
